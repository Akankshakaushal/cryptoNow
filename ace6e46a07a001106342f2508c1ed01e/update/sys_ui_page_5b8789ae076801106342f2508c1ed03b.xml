<?xml version="1.0" encoding="UTF-8"?><record_update table="sys_ui_page">
    <sys_ui_page action="INSERT_OR_UPDATE">
        <category>general</category>
        <client_script><![CDATA[function getPrice(event) {
	document.getElementById('price').innerText = "";
    var cryptoSysId = event.value;
    var si = new GlideAjax('x_350882_cryptonow.CryptoUtil');
    si.addParam("sysparm_name", "getCryptoPrice");
    si.addParam('sysparm_sysId', cryptoSysId);
    si.getXML(getResponse);

    function getResponse(response) {
        var answer = response.responseXML.documentElement.getAttribute("answer");
		document.getElementById('price').innerText = answer;
    }
}]]></client_script>
        <description/>
        <direct>false</direct>
        <endpoint>x_350882_cryptonow_Live Crypto Price.do</endpoint>
        <html><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">

	<g:evaluate var="jvar_gr" object="true">
		var now_GR = new GlideRecord("x_350882_cryptonow_crypto_listings");
		now_GR.query();
		now_GR;
	</g:evaluate>

	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<label>Select a Crypto</label>
				<select class="form-control" onchange = "getPrice(this)">
					<option>-- None --</option>
					<j:while test="${jvar_gr.next()}">
						<option value="${jvar_gr.getValue('sys_id')}">${jvar_gr.getValue('name')}</option>
					</j:while>
				</select>
				<h3 id = "price"></h3>
			</div>
		</div>
	</div>

</j:jelly>]]></html>
